{
  "ConnectionStrings": {
    "MongoDb": "mongodb://admin:secret@localhost:27017"
  },
  "MongoDb": {
    "DatabaseName": "NotifyServiceDb"
  },
  "RabbitMq": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "QueueName": "notifications",
    "ExchangeName": "notifications.exchange",
    "PrefetchCount": 50
  },
  "Processing": {
    "EnableBatchProcessing": true
  },
  "Batch": {
    "MaxSize": 10,
    "TimeoutMs": 5000
  },
  "Email": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "Username": "your-email@gmail.com",
    "Password": "your-app-password",
    "FromEmail": "your-email@gmail.com"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}